<div class="container">
  <div class="row justify-content-md-center">
    <div class="col col-md-12">
      <h1 class="center">Welcome, <%= current_user.username %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row d-flex">
    <div class="col group-card">
      <h3><strong>Your Public Repos</strong></h3>
      <p>
        <% @repo_data.each do |data| %>
        <% if data[:private] == false %>
        <li> <%= data[:name] %> </li>
        <% end %>
        <% end %>
      </p>
    </div>
    <div class="col group-card">
      <h3><strong>Your Private Repos</strong></h3>
      <p>
        <% @repo_data.each do |data| %>
        <% if data[:private] == true %>
        <li> <%= data[:name] %> </li>
        <% end %>
        <% end %>
      </p>
    </div>
  </div>
</div>
