<div class="container">
  <div class="row justify-content-md-center">
    <div class="col col-md-12">
      <h1 class="center">Welcome, <%= current_user.username %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row d-flex">
    <div class="col group-card">
      <h3 class='fas fa-lock-open'> <strong>Your Public Repos</strong></h3>
      <p>
        <% @public_repos.each do |repo| %>
          <li> <%= repo.name %> </li>
        <% end %>
      </p>
    </div>
    <div class="col group-card">
      <h3 class='fas fa-lock'>  <strong>Your Private Repos</strong></h3>
      <p>
        <% @private_repos.each do |repo| %>
          <li> <%= repo.name %> </li>
        <% end %>
      </p>
    </div>
  </div>
</div>
